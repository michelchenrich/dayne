<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "D'ayne" %></title>
  <meta name="description" content="">
  <meta name="author" content="">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
<header class="navbar navbar-fixed-top">
  <nav class="navbar-inner">
    <div class="container">
      <a class="brand">D'ayne</a>
      <ul class="nav">
        <% unless current_user.nil? %>
            <li>
              <%= link_to :edit_user_profile do %>
                  <i class="icon-pencil"></i> Edit User Profile
              <% end %>
            </li>
            <li>
              <%= link_to :logout do %>
                  <i class="icon-off"></i> Logout
              <% end %>
            </li>
        <% else %>
            <li>
              <%= link_to :register do %>
                  <i class="icon-asterisk"></i> Register
              <% end %>
            </li>
            <li>
              <%= link_to :login do %>
                  <i class="icon-user"></i> Login
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
<div class="container">
  <%= yield %>
</div>
<footer>
</footer>
</body>
</html>