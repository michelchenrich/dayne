<%= form_for @sales_order, :html => {:class => "form-horizontal"} do |form| %>
    <%= form_errors_block @sales_order %>

    <%= form_input(form, @sales_order, :customer) do %>
        <%= form.collection_select :customer_id, Customer.all, :id, :name %>
    <% end %>

    <%= form_input form, @sales_order, :delivery_date do %>
        <%= datepicker_field :sales_order, @sales_order, :delivery_date %>
    <% end %>

    <%= form_input(form, @sales_order, :salesman) do %>
        <%= form.collection_select :salesman_id, Salesman.all, :id, :name %>
    <% end %>

    <%= form_input(form, @sales_order, :material_type) do %>
        <%= form.collection_select :material_type_id, MaterialType.all, :id, :name %>
    <% end %>

    <%= form_submit form do %>
        <%= form.submit 'Create', :class => "btn btn-primary" %>
    <% end %>
<% end %>
