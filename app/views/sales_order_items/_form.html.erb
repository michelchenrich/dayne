<%= form_for @sales_order_item, :html => {:class => "form-horizontal"} do |form| %>
    <%= form_errors_block @sales_order_item %>

    <%= form_input form, @sales_order_item, :material do %>
        <%= form.collection_select :material_id, @sales_order_item.possible_materials, :id, :name %>
    <% end %>

    <%= form_input form, @sales_order_item, :description do %>
        <%= form.text_field :description, class: 'input-xxlarge' %>
    <% end %>

    <%= form.fields_for :quantities do |builder| %>
        <%= render 'quantity_fields', f: builder %>
    <% end %>

    <%= form_submit form do %>
        <%= button_tag(type: 'submit', class: "btn btn-primary", title: 'Save') do %>
            <i class="icon-ok icon-white"></i>
        <% end %>
    <% end %>
<% end %>
