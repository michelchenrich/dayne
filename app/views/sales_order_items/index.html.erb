<ul class="breadcrumb">
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li class="active">Sales Orders</li>
</ul>
<legend>Sales Orders</legend>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>#</th>
    <th><%= SalesOrder.human_attribute_name :customer %></th>
    <th><%= SalesOrder.human_attribute_name :delivery_date %></th>
    <th><%= SalesOrder.human_attribute_name :salesman %></th>
    <th><%= SalesOrder.human_attribute_name :material_type %></th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @sales_orders.each do |sales_order| %>
      <tr>
        <td><%= link_to sales_order.id, sales_order %></td>
        <td><%= sales_order.customer.name %></td>
        <td><%= format_date sales_order.delivery_date %></td>
        <td><%= sales_order.salesman.name %></td>
        <td><%= sales_order.material_type.name %></td>
        <td>
          <div class="btn-group">
            <%= link_to edit_sales_order_path(sales_order), :class => "btn btn-primary", :title => "Edit Sales Order" do %>
                <i class="icon-pencil icon-white"></i>
            <% end %>
            <%= link_to sales_order, :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => "btn btn-danger", :title => "Delete Sales Order" do %>
                <i class="icon-trash icon-white"></i>
            <% end %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="btn-toolbar">
  <%= link_to new_sales_order_path, :class => "btn btn-primary", :title => "Create Sales Order" do %>
      <i class="icon-plus icon-white"></i>
  <% end %>
</div>